<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eleves.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/visor_lcd"
            android:fontFamily="monospace"
            android:text="0123456789"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:typeface="monospace"
            tools:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_AC"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_ac"
                android:fontFamily="monospace"
                android:text="AC" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_paren_gouche"
                    android:layout_width="42dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/parentese"
                    android:text="(" />

                <Button
                    android:id="@+id/button_paren_droite"
                    android:layout_width="42dp"
                    android:layout_height="65dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/parentese"
                    android:text=")" />
            </LinearLayout>

            <Button
                android:id="@+id/button_oper_division"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_operation"
                android:text="/" />

            <Button
                android:id="@+id/button_oper_fois"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_operation"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="9" />

            <Button
                android:id="@+id/button_oper_moin"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_operation"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/numbers"
                android:text="6" />

            <Button
                android:id="@+id/button_oper_plus"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_operation"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="77dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_1"
                        android:layout_width="58dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/numbers"
                        android:text="1" />

                    <Button
                        android:id="@+id/button_2"
                        android:layout_width="58dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/numbers"
                        android:text="2" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="170dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/button_zero"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="78dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/numbers"
                    android:text="3" />

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="78dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/numbers"
                    android:text="." />
            </LinearLayout>

            <Button
                android:id="@+id/button_egal"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_egal"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

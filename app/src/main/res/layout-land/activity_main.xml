<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eleves.calculator.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="7" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="8" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="9" />

                <Button
                    android:id="@+id/button_oper_fois"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operation"
                    android:text="*" />

                <Button
                    android:id="@+id/button_AC"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_ac"
                    android:text="AC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="4" />

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="5" />

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/numbers"
                    android:text="6" />

                <Button
                    android:id="@+id/button_oper_division"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operation"
                    android:text="/" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_paren_gouche"
                        android:layout_width="35dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/parentese"
                        android:text="(" />

                    <Button
                        android:id="@+id/button_paren_droite"
                        android:layout_width="35dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/parentese"
                        android:text=")" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_1"
                            android:layout_width="68dp"
                            android:layout_height="60dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/numbers"
                            android:text="1" />

                        <Button
                            android:id="@+id/button_2"
                            android:layout_width="65dp"
                            android:layout_height="60dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/numbers"
                            android:text="2" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_0"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/button_zero"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers"
                        android:text="3" />

                    <Button
                        android:id="@+id/button_point"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/numbers"
                        android:text="." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_oper_moin"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/button_operation"
                        android:text="-" />

                    <Button
                        android:id="@+id/button_oper_plus"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/button_operation"
                        android:text="+" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_egal"
                    android:layout_width="68dp"
                    android:layout_height="126dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_egal"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/visor_lcd"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/visor_lcd"
            android:text="TextView" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
